.chat-side
  .chat-side__user
    .chat-side__user__name
      =current_user.name
      =link_to new_group_path do
        = fa_icon 'pencil-square lg', class: 'icon_edit'
      =link_to edit_user_path(current_user) do
        = fa_icon 'cog lg', class: 'icon_cog'
  .chat-side__groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .chat-side__groups__name
          = group.name
        .chat-side__groups__message
          = group.showLastMessage
